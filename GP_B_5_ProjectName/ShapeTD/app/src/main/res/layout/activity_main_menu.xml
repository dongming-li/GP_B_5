<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="gp_b_5.shapetd.Menu.MainMenu"
    android:background="@drawable/hex_menu"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

    <Button
        android:id="@+id/manageAccounts"
        android:layout_width="101dp"
        android:layout_height="67dp"
        android:layout_weight="1"
        android:alpha="0"
        android:clickable="true"
        android:onClick="ManageUsers"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="54dp"
        android:layout_marginRight="163dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/playGame"
        android:layout_width="133dp"
        android:layout_height="84dp"
        android:layout_weight="1"
        android:alpha="0"
        android:clickable="true"
        android:onClick="Play"
        android:textAllCaps="false"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="112dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginRight="218dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="1.0" />

    <Button
        android:id="@+id/BuildMap"
        android:layout_width="102dp"
        android:layout_height="65dp"
        android:layout_weight="1"
        android:alpha="0"
        android:clickable="true"
        android:onClick="MapBuilder"
        android:visibility="visible"
        android:layout_marginRight="104dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="131dp" />

    <Button
        android:id="@+id/viewLeaderboard"
        android:layout_width="105dp"
        android:layout_height="61dp"
        android:layout_weight="1"
        android:alpha="0"
        android:clickable="true"
        android:onClick="ViewLeaderBoards"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="54dp"
        android:layout_marginLeft="178dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/exit"
        android:layout_width="102dp"
        android:layout_height="62dp"
        android:layout_weight="1"
        android:alpha="0"
        android:clickable="true"
        android:onClick="Exit"
        android:text="Exit"
        android:layout_marginLeft="122dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="134dp" />

    <TextView
        android:id="@+id/userAccountType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.812"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.024" />

    <Button
        android:id="@+id/settings"
        android:layout_width="64dp"
        android:layout_height="50dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:alpha="0"
        android:onClick="gameSettings"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</android.support.constraint.ConstraintLayout>
